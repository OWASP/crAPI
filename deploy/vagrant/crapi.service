[Unit]
Description=crAPI
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=true
WorkingDirectory=/opt/crapi
ExecStart=/bin/bash -c "/usr/local/bin/docker-compose -f docker-compose.yml -f docker-compose.override.yml up -d --remove-orphans"
ExecStop=/bin/bash -c "/usr/local/bin/docker-compose -f docker-compose.yml -f docker-compose.override.yml down"

[Install]
WantedBy=multi-user.target
